<!-- about -->
<div class="about">
	<div class="intro intro--about">
		<div class="intro__container">
			<h1 class="about__heading ani ani--fade-in">
				{{{title}}}
			</h1>
			<p class="intro__description ani ani--fade-in ani--delay-short">
				{{p1}}
			</p>
			<p class="intro__description intro__description--small ani ani--fade-in ani--delay-medium">
				{{p2}}
			</p>
			<p class="intro__description intro__description--small ani ani--fade-in ani--delay-long">
				{{p3}}
			</p>
			<img data-src="media/{{img}}" class="img-responsive about__img js-about-img ani ani--fade-in ani--delay-very-long" />
			<p class="intro__description intro__description--small ani ani--fade-in ani--delay-very-long">
				{{p4}}
				{{contact}} <a href="mailto:{{email}}" target="_blank" class="link link--about">{{email}}</a>
			</p>
		</div>
	</div>
</div>

