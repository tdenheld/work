<!-- about -->
<div class="about">
	<div class="intro intro--about">
		<div class="intro__container">
			<h1 class="about__heading a a-fi">
				{{{about.title}}}
			</h1>
			<p class="intro__description a a-fi a-del-250">
				{{about.p1}}
			</p>
			<div class="js-scrll-section a a-fi">
				<p class="intro__description intro__description--small tr-stag js-tr">
					{{about.p2}}
				</p>
			</div>
			<div class="js-scrll-section a a-fi">
				<p class="intro__description intro__description--small tr-stag js-tr">
					{{about.p3}}
				</p>
			</div>
			<div class="js-scrll-section a a-fi">
				<img data-src="media/{{about.img}}" class="img-responsive about__img js-about-img tr-si tr-400 js-tr" />
			</div>
			<div class="js-scrll-section a a-fi">
				<p class="intro__description intro__description--small tr-400 tr-stag js-tr">
					{{about.p4}}
					{{about.contact}} <a href="mailto:{{about.email}}" target="_blank" class="link link--about"><b>{{about.email}}</b></a>
				</p>
			</div>
		</div>
	</div>
</div>

