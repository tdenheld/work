<!-- about -->
<div class="about">
	<div class="intro intro--about">
		<div class="intro__container">
			<h1 class="about__heading ani ani--fade-in">
				{{{title}}}
			</h1>
			<p class="intro__description ani ani--fade-in ani--delay-short">
				{{p1}}
			</p>
			<div class="js-scrll-section ani ani--fade-in">
				<p class="intro__description intro__description--small tr-stag">
					{{p2}}
				</p>
			</div>
			<div class="js-scrll-section ani ani--fade-in">
				<p class="intro__description intro__description--small tr-stag">
					{{p3}}
				</p>
			</div>
			<div class="js-scrll-section ani ani--fade-in">
				<img data-src="media/{{img}}" class="img-responsive about__img js-about-img tr tr--scale-in" />
			</div>
			<div class="js-scrll-section ani ani--fade-in">
				<p class="intro__description intro__description--small tr-stag">
					{{p4}}
					{{contact}} <a href="mailto:{{email}}" target="_blank" class="link link--about"><b>{{email}}</b></a>
				</p>
			</div>
		</div>
	</div>
</div>

